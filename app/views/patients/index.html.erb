<div class="w-full">

  <header class="text-center p-4 bg-gray-100">
    <h1 class="font-bold text-4xl">Patients</h1>
  </header>

  <div class="flex flex-col items-center">
    <div class="overflow-x-auto w-full">
      <table class="min-w-full">
        <thead class="bg-white border-b">
          <tr>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              ID
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              First Name
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Last Name
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Date of Birth
            </th>
            <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
              Gender
            </th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr class="bg-gray-50 border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                <% if policy(patient).update? %>
                  <%= link_to patient.id, patient_path(patient) %>
                <% else %>
                  <%= patient.id %>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= patient.first_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= patient.last_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= patient.dob %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                <%= patient.gender %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
